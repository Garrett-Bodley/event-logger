<div class="event_container">
  <section class="card">
    <article class="event-group">
      <h3>Source IP Address:</h3>
      <p class="event-item"><%= @event.src %></p>
    </article>
    <article class="event-group">
      <h3>Destination IP Address:</h3>
      <p class="event-item"><%= @event.dst %></p>
    </article>
    <article class="event-group">
      <h3>Full log text:</h3>
      <p class="event-item"><%= @event.log_txt %></p>
    </article>
  </section>
</div>